@{
    ViewData["Title"] = "Change Avatar";
    string Image = string.Empty;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form class="p-3" id="updateUser" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label class="text-white" for="avatar">Choose avatar image (JPG or PNG):</label>
                    <input type="file" class="form-control-file text-white" id="avatar" name="avatar" accept=".jpg,.jpeg,.png" required>
                </div>
                <span asp-validation-for="@Image" class="text-danger"></span>
                <canvas id="canvas" style="display: none;"></canvas>
                <button id="editButton" class="btn btn-secondary" type="button">Edit</button>
                <button id="submitButton" class="btn btn-primary" style="display: none;" type="button">Submit</button>
                <button id="cancelButton" class="btn btn-danger" style="display: none;" type="button">Cancel</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var canvas = document.getElementById('canvas');
            var ctx = canvas.getContext('2d');
            var img;
            var squareX = 0; // Начальные координаты квадрата
            var squareY = 0;
            var squareSize = 800; // Размер квадрата (можно изменить по вашему усмотрению)
            var isDragging = false;
            var offsetX, offsetY;

            $('#editButton').click(function () {
                var image = document.getElementById('avatar');

                if (image.files && image.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        img = new Image();
                        img.onload = function () {
                            canvas.width = img.width;
                            canvas.height = img.height;

                            ctx.drawImage(img, 0, 0); // Отображаем изображение на холсте без изменений
                            $('#canvas').show();
                            $('#avatar').hide();
                            $('#submitButton').show();
                            $('#cancelButton').show();
                            drawSquare(); // Рисуем квадрат на холсте
                        };
                        img.src = e.target.result;
                    };
                    reader.readAsDataURL(image.files[0]);
                }
                return false;
            });

            $('#submitButton').click(function () {
                // Определяем координаты квадрата относительно изображения
                var scaleX = img.width / canvas.width;
                var scaleY = img.height / canvas.height;
                var cropX = squareX * scaleX;
                var cropY = squareY * scaleY;
                var cropSize = squareSize * scaleX;

                // Создаем временный холст для обрезки изображения
                var tempCanvas = document.createElement('canvas');
                var tempCtx = tempCanvas.getContext('2d');
                tempCanvas.width = cropSize;
                tempCanvas.height = cropSize;
                tempCtx.drawImage(img, cropX, cropY, cropSize, cropSize, 0, 0, cropSize, cropSize);

                // Получаем обрезанное изображение в формате base64
                var croppedDataUrl = tempCanvas.toDataURL();

                // Преобразуем base64 в Blob
                var croppedBlob = dataURLtoBlob(croppedDataUrl);

                // Создаем FormData и добавляем в него Blob с обрезанным изображением
                var formData = new FormData();
                formData.append('avatar', croppedBlob, 'avatar.png');

                // Отправляем FormData на сервер
                $.ajax({
                    url: '/User/ChangeAvatar',
                    type: 'PUT',
                    data: formData,
                    processData: false,
                    contentType: false,
                });
            });

            $('#cancelButton').click(function () {
                // Сбрасываем состояние и показываем поле выбора файла снова
                $('#canvas').hide();
                $('#avatar').val('');
                $('#avatar').show();
                $('#submitButton').hide();
                $('#cancelButton').hide();
            });

            canvas.addEventListener('mousedown', function (event) {
                var mouseX = event.clientX - canvas.getBoundingClientRect().left;
                var mouseY = event.clientY - canvas.getBoundingClientRect().top;

                if (mouseX >= squareX && mouseX <= squareX + squareSize &&
                    mouseY >= squareY && mouseY <= squareY + squareSize) {
                    isDragging = true;
                    offsetX = mouseX - squareX;
                    offsetY = mouseY - squareY;
                }
            });

            canvas.addEventListener('mousemove', function (event) {
                if (isDragging) {
                    var mouseX = event.clientX - canvas.getBoundingClientRect().left;
                    var mouseY = event.clientY - canvas.getBoundingClientRect().top;

                    squareX = mouseX - offsetX;
                    squareY = mouseY - offsetY;

                    if (squareX < 0) squareX = 0;
                    if (squareX + squareSize > canvas.width) squareX = canvas.width - squareSize;
                    if (squareY < 0) squareY = 0;
                    if (squareY + squareSize > canvas.height) squareY = canvas.height - squareSize;

                    redrawCanvas();
                }
            });

            canvas.addEventListener('mouseup', function (event) {
                isDragging = false;
            });

            function drawSquare() {
                ctx.strokeStyle = 'red';
                ctx.lineWidth = 2;
                ctx.strokeRect(squareX, squareY, squareSize, squareSize);
            }

            function redrawCanvas() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                ctx.drawImage(img, 0, 0);
                drawSquare();
            }

            function dataURLtoBlob(dataUrl) {
                var arr = dataUrl.split(',');
                var mime = arr[0].match(/:(.*?);/)[1];
                var bstr = atob(arr[1]);
                var n = bstr.length;
                var u8arr = new Uint8Array(n);
                while (n--) {
                    u8arr[n] = bstr.charCodeAt(n);
                }
                return new Blob([u8arr], { type: mime });
            }
        });
    </script>
