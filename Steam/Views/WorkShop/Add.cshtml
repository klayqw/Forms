@model WorkShopToAddViewModel
@{
    ViewData["Title"] = "Add";
}


<form asp-action="Add" asp-controller="WorkShop" method="post">
    <div class="mb-3">
        <label class="form-label text-white" asp-for="@Model.WorkShopDto.Title">Title</label>
        <input type="text" class="form-control" asp-for="@Model.WorkShopDto.Title">
        <span class="text-danger" asp-validation-for="@Model.WorkShopDto.Title"></span>
    </div>   
    <div class="mb-3">
        <label asp-for="@Model.WorkShopDto.Description" class="form-label text-white">Description</label>
        <input type="text" asp-for="@Model.WorkShopDto.Description" class="form-control">
        <span class="text-danger" asp-validation-for="@Model.WorkShopDto.Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.WorkShopDto.GameId" class="form-label text-white">Select Game</label>
        <select asp-for="@Model.WorkShopDto.GameId" class="form-control">
            <option value="">Select a game</option>
            @foreach (var game in Model.Games)
            {
                <option value="@game.Id">
                    @game.Title
                </option>
            }
        </select>
        <span class="text-danger" asp-validation-for="@Model.WorkShopDto.GameId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<button onclick="Back('/WorkShop/GetAll')" class="btn btn-primary">Back</button>
