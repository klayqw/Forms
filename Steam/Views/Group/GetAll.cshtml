@model IEnumerable<Group>
@{
    ViewData["Title"] = "Get All";
}

<div>
    <button class="btn btn-primary" onclick="AddGroup()" style="padding:0,100px">Creat Group</button>
    <button class="btn btn-primary" onclick="ShowGroup()" style="padding:0,100px">Show my Creator Groups</button>
    <button class="btn btn-primary" onclick="Back('/Group/ShowJoinedGroup')" style="padding:0,100px"> Show my Groups</button>
</div>


<div class="d-inline-flex p-2">
@if(Model is null || Model.Any() == false)
{
    <p>Nothing is here..</p>
}
else
{
    foreach(var item in Model)
    {
        <div>
                <div class="card" style="width: 18rem;" onclick="showGroupDetail(@item.Id)" style="max-height: 200px;">
                    <img src="@item.GroupImageUrl" class="card-img-top" alt="Game Image" style="max-height:200px">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.MemberCount</p>
                        <p class="card-text">@item.Creator</p>
                    </div>           
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div>
                        <button class="btn btn-primary" onclick="DeleteGroup(@item.Id)">Delete</button>
                        <button class="btn btn-primary" onclick="UpdateGroupView(@item.Id)">Update</button>
                    </div>
                }
        </div>

           
    }
}
</div>
<div>
    <button class="btn btn-primary" onclick="Back()">Back</button>
</div>
