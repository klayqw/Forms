@model IEnumerable<User>
@{
    ViewData["Title"] = "All User";
}


<div class="d-flex flex-wrap">
@if (Model is null || Model.Any() == false)
{
    <p class="text-white">No user in base</p>
}
else
{
        @foreach (var item in Model)
        {
            <div class="p-2">
                <div class="card bg-dark" style="max-width:300px" onclick="GoToWithId('/User/ProfileById','@item.Id')">
                    <img src="@item.AvatarUrl" class="card-img-top" alt="Game Image">
                    <div class="card-body">
                        <h5 class="card-title text-white">@item.Id</h5>
                        <p class="card-text text-white">@item.Email</p>
                        <p class="card-text text-white">@item.UserName</p>
                    </div>
                </div>
                <button class="btn btn-danger" onclick="Ban('@item.Id')">Ban</button>
                <button class="btn btn-danger" onclick="Unban('@item.Id')">UnBan</button>
                <button class="btn btn-danger" onclick="GoToWithId('/User/UpdateById','@item.Id')">Edit</button>
            </div>
        }
}
    </div>

